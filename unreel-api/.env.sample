# Sample Environment Variables for UnReel Project
# Copy this file to .env and update with your actual values

# === BACKEND API CONFIGURATION ===
# Host and port for the FastAPI server
HOST=127.0.0.1
PORT=3000

# === DATABASE CONFIGURATION ===
# PostgreSQL database connection URL
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/unreel

# === GOOGLE GEMINI API CONFIGURATION ===
# API key for Google Gemini (required for AI analysis)
# Get your API key from Google AI Studio: https://aistudio.google.com/
GEMINI_API_KEY=your_actual_gemini_api_key_here

# === DEVELOPMENT SETTINGS ===
# Enable/disable debug mode (True/False)
DEBUG=True

# Secret key for session encryption (generate a secure random string)
SECRET_KEY=your_secret_key_here

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO